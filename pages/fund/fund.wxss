.fund-ocr-container {
  padding: 32rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.tip {
  font-size: 26rpx;
  color: #1989fa;
  margin-bottom: 32rpx;
}

.btn-primary {
  margin-bottom: 48rpx;
}

.summary-wrap {
  background: #e8f4fd;
  border-radius: 12rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 32rpx;
}

.summary-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.summary-row {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.list-wrap {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx 32rpx;
}

.list-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.list-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}

.list-item:last-child {
  border-bottom: none;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.item-nums {
  font-size: 24rpx;
  color: #666;
}

.ocr-canvas-hidden {
  position: fixed;
  left: -9999px;
  top: 0;
  width: 1px;
  height: 1px;
  z-index: -1;
}
