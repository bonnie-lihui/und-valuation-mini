/* 配色、圆角与 add-fund 保持一致 */
.page-wrap {
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #f2f4f6;
  padding: 24rpx 32rpx 32rpx;
}

/* 搜索区：图一效果，白卡片 + 右侧搜索按钮 */
.search-card {
  margin-bottom: 24rpx;
  padding: 16rpx 24rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
}

/* 与 add-fund、原 van-search 样式一致 */
.search-field-wrap {
  display: flex;
  align-items: center;
}

.search-input-inner {
  flex: 1;
  background-color: #f5f6f8;
  border-radius: 16rpx;
  overflow: hidden;
  padding-left: 24rpx;
}

.search-input-inner .van-field {
  padding: 10rpx 20rpx 10rpx 0;
  background-color: transparent !important;
}

.btn-search {
  margin-left: 16rpx;
  padding: 0 28rpx;
  height: 64rpx;
  line-height: 64rpx;
  background-color: #e74c3c;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 32rpx;
  text-align: center;
}

.form-wrap {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 24rpx 28rpx 28rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

/* 数据存储提示：与关于我们页一致，浅黄底 + 深色字 */
.section-tip-wrap {
  background-color: #fff8e6;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 24rpx;
  border-left: 6rpx solid #e6c84c;
}

.section-tip-text {
  font-size: 28rpx;
  color: #8b6914;
  line-height: 1.6;
}

/* 红框：表单项标签（基金名称、持仓金额、持有收益）黑色 */
.form-label {
  color: #000000 !important;
}

/* 绿框：只读字段的值/占位（如「搜索后自动带出」「0.00」）黑偏灰 */
.readonly-input {
  color: #333333 !important;
  -webkit-text-fill-color: #333333 !important;
}

.submit-btn {
  margin-top: 24rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx !important;
  font-size: 28rpx;
  font-weight: 600;
  background-color: #e74c3c !important;
  border: none !important;
}

.delete-btn {
  margin-top: 24rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx !important;
  font-size: 28rpx;
  color: #e74c3c !important;
  border: 1rpx solid #e74c3c !important;
}
