.page-wrap {
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #f5f6f8;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

/* 头部默认头像区（主题色） */
.user-block {
  padding: 48rpx 32rpx 40rpx;
  background: linear-gradient(180deg, #e74c3c 0%, #c0392b 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar-wrap {
  width: 128rpx;
  height: 128rpx;
  border-radius: 64rpx;
  overflow: hidden;
  background-color: #fff;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-avatar {
  width: 100%;
  height: 100%;
}

.user-avatar-default {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
}

.user-avatar-icon {
  line-height: 1;
}

.user-nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 8rpx;
}

.user-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 菜单分组 */
.menu-groups {
  margin-top: 24rpx;
  padding: 0 24rpx;
}

.menu-group {
  margin-bottom: 24rpx;
}

.menu-group-title {
  font-size: 26rpx;
  color: #8e8e93;
  padding: 16rpx 16rpx 12rpx;
}

.menu-list {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.menu-item {
  height: 100rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #ebedf0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item-label {
  font-size: 30rpx;
  color: #1a1a1a;
}

.menu-item-arrow {
  font-size: 32rpx;
  color: #c8c9cc;
  font-weight: 300;
}

.menu-item-btn {
  margin: 0;
  padding: 0 32rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: none;
  border: none;
  border-radius: 0;
  border-bottom: 1rpx solid #ebedf0;
  text-align: left;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.menu-item-btn::after {
  border: none;
}
