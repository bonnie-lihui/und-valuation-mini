.page-wrap {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 48rpx;
  box-sizing: border-box;
}

.tip-block {
  margin-bottom: 24rpx;
  padding: 16rpx 20rpx;
  background: rgba(0, 0, 0, 0.04);
  border-radius: 8rpx;
  border-left: 4rpx solid rgba(231, 76, 60, 0.35);
}

.tip-text {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
  display: block;
}

.tip-extra {
  margin-top: 12rpx;
  color: #e74c3c;
  font-size: 24rpx;
}

.tip-error {
  margin-top: 12rpx;
  color: #e74c3c;
  font-size: 24rpx;
  text-decoration: underline;
}

.btn-choose {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx 32rpx;
  background: #fff;
  border-radius: 12rpx;
  border: 2rpx dashed #ddd;
}

.btn-choose-icon {
  margin-bottom: 16rpx;
}

.btn-choose-text {
  font-size: 30rpx;
  color: #e74c3c;
}

/* 已选截图预览 + 继续上传 + 添加 */
.preview-wrap {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
}

.preview-list {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.preview-item {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
  background: #f5f5f5;
}

.preview-img {
  width: 100%;
  height: 100%;
}

.preview-remove {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 32rpx;
  line-height: 44rpx;
  text-align: center;
}

.preview-add {
  border: 2rpx dashed #ddd;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.preview-add-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

.rerecognize-tip {
  margin-bottom: 8rpx;
  font-size: 24rpx;
  color: #999;
}

.btn-rerecognize {
  margin-top: 24rpx;
}

.ocr-raw-wrap {
  margin-top: 32rpx;
  padding: 24rpx;
  background: #fffbe6;
  border: 1rpx solid #ffe58f;
  border-radius: 12rpx;
}

.ocr-raw-label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
}

.ocr-raw-text {
  font-size: 24rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
  display: block;
}

.btn-add {
  margin-top: 48rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #e74c3c;
  color: #fff;
  font-size: 32rpx;
  border-radius: 12rpx;
}

/* 确认列表 */
.confirm-wrap {
  padding-bottom: 48rpx;
}

/* 汇总统计 */
.summary-wrap {
  background: rgba(231, 76, 60, 0.08);
  border-radius: 12rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 24rpx;
}

.summary-row {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.list-wrap {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
  position: relative;
  padding: 24rpx 32rpx;
  padding-right: 100rpx;
}

.card-abnormal {
  background: #fff8f0;
}

.card-body {
  min-height: 80rpx;
}

.item-row {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.item-name {
  font-weight: 500;
  margin-bottom: 8rpx;
  font-size: 30rpx;
}

.item-code {
  color: #666;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.item-nums {
  color: #666;
  font-size: 24rpx;
}

.item-abnormal-tip {
  font-size: 24rpx;
  color: #e74c3c;
  margin-top: 8rpx;
}

.card-remove {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  font-size: 26rpx;
  color: #e74c3c;
}

.btn-row {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.btn-secondary {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #f5f5f5;
  color: #666;
  font-size: 32rpx;
  border-radius: 12rpx;
}

.ocr-canvas-hidden {
  position: fixed;
  left: -9999px;
  top: 0;
  width: 1px;
  height: 1px;
  z-index: -1;
}

.item-unmatched {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex-wrap: wrap;
}

.btn-input-code {
  padding: 8rpx 24rpx;
  font-size: 24rpx;
  color: #e74c3c;
  border: 1rpx solid #e74c3c;
  border-radius: 8rpx;
}

.code-input-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
  box-sizing: border-box;
}

.code-input-box {
  width: 100%;
  max-width: 560rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
}

.code-input-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 24rpx;
}

.code-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}

.code-input-actions {
  display: flex;
  gap: 24rpx;
  justify-content: flex-end;
}

.code-input-btn {
  padding: 16rpx 40rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.code-input-btn.cancel {
  color: #666;
  background: #f5f5f5;
}

.code-input-btn.confirm {
  color: #fff;
  background: #e74c3c;
}
