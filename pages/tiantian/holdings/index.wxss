.page-wrap { min-height: 100vh; background: #f5f5f5; padding-bottom: 32rpx; }
.header-block { background: #fff; margin-bottom: 16rpx; }
.header-block .disc-row {
  padding: 20rpx 32rpx;
  background-color: #fff8e6;
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  border-bottom: 1rpx solid #e8e0c8;
}
.header-block .disc-icon {
  font-size: 32rpx;
  flex-shrink: 0;
  margin-top: 2rpx;
}
.header-block .disc-text {
  flex: 1;
  font-size: 22rpx;
  color: #8b6914;
  line-height: 1.5;
}
.summary-row { display: flex; justify-content: space-around; padding: 16rpx 32rpx; align-items: flex-start; }
.summary-item { text-align: center; display: flex; flex-direction: column; align-items: center; }
.summary-label-row { display: flex; align-items: center; justify-content: center; gap: 8rpx; height: 48rpx; }
.summary-label { font-size: 24rpx; color: #999; display: block; }
.summary-eye { margin-left: 4rpx; padding: 8rpx; }
.summary-value { font-size: 36rpx; font-weight: 600; }
.summary-value.up { color: #e74c3c; }
.summary-value.down { color: #26a69a; }
.summary-value-row { display: flex; align-items: center; justify-content: center; height: 56rpx; }
.summary-estimate-toggle { padding: 8rpx; margin-right: 4rpx; }
.summary-estimate-toggle-img.van-icon { font-size: 0; }
.summary-estimate-toggle-img .van-icon__image { width: 28rpx; height: 28rpx; }
.empty-wrap { padding: 80rpx 0; }
.flex { display: flex; }
.flex-d { flex-direction: column; }
.flex-center { justify-content: center; align-items: center; }
.add-entry-link { display: flex; align-items: center; margin-top: 24rpx; }
.add-entry-icon { font-size: 32rpx; color: #999; margin-right: 8rpx; }
.add-entry-text { font-size: 28rpx; color: #999; }
.empty-wrap .add-entry-link { justify-content: center; }
.action-bar { display: flex; justify-content: flex-start; align-items: center; padding: 24rpx 24rpx 24rpx 16rpx; margin: 0 24rpx; background: transparent; }
.action-bar .add-entry-link { margin-top: 0; }
.action-bar .add-entry-link .add-entry-text { color: #999; }
.loading-wrap { padding: 60rpx; }
.list-wrap { background: #fff; margin: 0 24rpx; border-radius: 12rpx; overflow: hidden; }
.table-head { border-bottom: 1rpx solid #eee; }
.table-head-row { display: flex; padding: 16rpx 16rpx 0; font-size: 24rpx; color: #999; }
.table-head-row .col-name { text-align: center; }
.table-head-date-row { padding: 8rpx 16rpx 24rpx; }
.table-head-date { font-size: 22rpx; color: #bbb; }
.table-head-date-row .table-head-date { text-align: center; display: block; width: 100%; box-sizing: border-box; }
.table-head-cell-sort { display: flex; align-items: center; justify-content: flex-end; gap: 4rpx; }
.table-head-cell-sort text { margin-right: 0; }
.table-head-sort-img { width: 28rpx; height: 28rpx; flex-shrink: 0; }
.col-name { flex: 1.2; min-width: 0; display: flex; flex-direction: column; justify-content: flex-start; align-items: flex-start; }
.col-num { flex: 0.8; text-align: right; }
.col-num-multi { display: flex; flex-direction: column; align-items: flex-end; justify-content: flex-start; gap: 4rpx; }
.col-num-sub { font-size: 22rpx; color: #999; }
.fund-row { display: flex; align-items: flex-start; padding: 24rpx 16rpx; border-bottom: 1rpx solid #f0f0f0; font-size: 26rpx; }
.fund-name { display: block; color: #333; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 100%; }
.fund-amount { display: block; font-size: 22rpx; color: #999; margin-top: 4rpx; }
/* 涨：红 跌：绿 */
.up { color: #e74c3c; }
.down { color: #07c160; }
.dialog-tip { font-size: 24rpx; color: #999; padding: 16rpx; }
