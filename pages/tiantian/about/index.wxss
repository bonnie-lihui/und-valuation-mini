.page-wrap {
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #f5f6f8;
  padding: 24rpx 32rpx calc(32rpx + env(safe-area-inset-bottom));
}

.content-block {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
}

.section {
  margin-bottom: 32rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.section-text {
  display: block;
  font-size: 28rpx;
  color: #555;
  line-height: 1.65;
  margin-bottom: 12rpx;
}

.section-text:last-child {
  margin-bottom: 0;
}

/* 数据更新提示：浅黄底 + 深色字，与持有页免责声明风格一致 */
.section-tip-wrap {
  background-color: #fff8e6;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  border-left: 6rpx solid #e6c84c;
}

.section-tip-text {
  font-size: 28rpx;
  color: #8b6914;
  line-height: 1.6;
}
