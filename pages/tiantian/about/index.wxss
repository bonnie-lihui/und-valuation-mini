.page-wrap {
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #f5f6f8;
  padding: 24rpx 32rpx calc(32rpx + env(safe-area-inset-bottom));
}

.content-block {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
}

.section {
  margin-bottom: 32rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.section-text {
  display: block;
  font-size: 28rpx;
  color: #555;
  line-height: 1.65;
  margin-bottom: 12rpx;
}

.section-text:last-child {
  margin-bottom: 0;
}
