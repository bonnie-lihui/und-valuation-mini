.page-wrap {
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #f2f4f6;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}

/* 搜索区：白卡片 + 搜索按钮 */
.search-card {
  margin: 24rpx 32rpx;
  padding: 16rpx 24rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
}

.search-card .van-search {
  padding: 0;
  background: transparent;
}

.search-card .van-search__content {
  background-color: #f5f6f8;
  border-radius: 16rpx;
}

/* 与首页底部「添加关注」按钮配色一致 */
.btn-search {
  margin-left: 16rpx;
  padding: 0 28rpx;
  height: 64rpx;
  line-height: 64rpx;
  background-color: #007aff;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 32rpx;
  text-align: center;
}

/* 搜索结果：加载中 / 错误 / 结果卡片 */
.search-result-wrap {
  margin: 0 32rpx 24rpx;
}

.search-loading {
  padding: 32rpx;
  text-align: center;
  font-size: 28rpx;
  color: #8e8e93;
  background-color: #fff;
  border-radius: 20rpx;
}

.search-error {
  padding: 32rpx;
  background-color: #fff5f5;
  border-radius: 20rpx;
  border: 1rpx solid #ffebeb;
}

.search-error-text {
  font-size: 28rpx;
  color: #c0392b;
  line-height: 1.5;
}

.result-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.result-card .fund-info {
  flex: 1;
  min-width: 0;
}

.result-card .btn-add-follow {
  margin-left: 24rpx;
  padding: 0 32rpx;
  height: 64rpx;
  line-height: 64rpx;
  background-color: #007aff;
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
  border-radius: 32rpx;
  text-align: center;
  flex-shrink: 0;
}

.result-card .btn-add-follow.followed {
  background-color: #e8e8e8;
  color: #8e8e93;
}

/* 列表区：标题 + 卡片列表 */
.list-section {
  padding: 0 32rpx 32rpx;
}

.list-title {
  padding: 8rpx 0 20rpx;
  font-size: 26rpx;
  color: #8e8e93;
  font-weight: 500;
}

.list-wrap {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.fund-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 28rpx 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.fund-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.fund-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.fund-code {
  font-size: 24rpx;
  color: #8e8e93;
  letter-spacing: 1rpx;
}

.fund-delete {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-left: 24rpx;
}

/* 空状态 */
.empty-wrap {
  padding: 120rpx 48rpx 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-hint {
  margin-top: 24rpx;
  font-size: 26rpx;
  color: #8e8e93;
  text-align: center;
  line-height: 1.5;
}

/* 底部提示条 */
.footer-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background-color: #fff;
  border-top: 1rpx solid #ebedf0;
  text-align: center;
}

.footer-tip {
  font-size: 24rpx;
  color: #8e8e93;
}
